<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bankcardId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/app_container"
            style="@style/AppTheme.AppButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/gradient_app_item"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:padding="4dp"
                tools:background="@drawable/cerclebackgroundpurple"
                tools:src="@drawable/ic_raw_logo" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="@string/app_tiktok" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/lightgray" />

            <TextView
                android:id="@+id/packageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:paddingTop="0dp"
                android:paddingBottom="2dp"
                android:textColor="#101010"
                android:textSize="11sp"
                tools:text="@string/app_name" />

        </LinearLayout>

        <ImageView
            android:id="@+id/overflow_menu"
            app:srcCompat="@drawable/ic_dots"
            app:tint="#4A4A4A"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:contentDescription="@+id/overflow_menu"
            android:paddingBottom="8dp"
            android:scaleType="fitEnd"
            tools:background="@android:color/holo_red_dark"
            tools:ignore="ImageContrastCheck" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>