<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/window_gradient</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/window_gradient</item>
        <!--<item title="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyTheme.ActionMode" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SimpleButton" parent="@style/Widget.AppCompat.Button.Colored">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Title" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppName" parent="Widget.AppCompat.TextView">
<!--        <item name="android:fontFamily">@font/oxygen_mono</item>-->
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppName2" parent="Widget.AppCompat.TextView">
<!--        <item name="android:fontFamily">@font/oxygen_mono</item>-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1D1D</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="DefaultText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2B2929</item>
        <!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="AppTheme.AppButton">
        <item name="background">@drawable/gradient_app_item</item>
    </style>

</resources>
