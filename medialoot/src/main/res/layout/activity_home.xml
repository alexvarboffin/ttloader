<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/colorPrimary"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@color/colorPrimary"
            android:gravity="start"
            android:padding="@dimen/_10sdp"
            android:text="Video Downloader"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff3fbfe"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivscroll"
                android:layout_width="match_parent"
                android:layout_height="250.0dip"
                android:src="@drawable/dummy"
                app:layout_collapseMode="parallax" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/grammarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="125.0dip"
                        android:layout_marginStart="10.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginEnd="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:layout_weight="1.0"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cornerRadius="7.0dip">

                        <RelativeLayout
                            android:id="@+id/lay_search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/search_btn">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/img_search"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_search_black_24dp2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_search"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="top"
                                    android:text="@string/search"
                                    android:textAlignment="gravity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15.0sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/sunkarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="125.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:layout_weight="1.0"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cornerRadius="7.0dip">

                        <RelativeLayout
                            android:id="@+id/lay_download"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/download_btn">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/img_download"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_file_download_white_50dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_download"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="top"
                                    android:text="DOWNLOAD"
                                    android:textAlignment="gravity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15.0sp" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/verbLayout"
                        android:layout_width="match_parent"
                        android:layout_height="125.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:layout_weight="1.0"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cornerRadius="7.0dip">

                        <RelativeLayout
                            android:id="@+id/lay_share"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/share_btn">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/img_share"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_share_white_50dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_share"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="top"
                                    android:text="SHARE"
                                    android:textAlignment="gravity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15.0sp" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tenseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="125.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:layout_weight="1.0"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cornerRadius="7.0dip">

                        <RelativeLayout
                            android:id="@+id/lay_rateus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rateus_btn">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/img_rate"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_star_white_50dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_rate"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="top"
                                    android:text="RATE US"
                                    android:textAlignment="gravity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15.0sp" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/wordsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="125.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:layout_weight="1.0"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cornerRadius="7.0dip">

                        <RelativeLayout
                            android:id="@+id/lay_more_apps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/moreapp_btn">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/img_more"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_apps_white_50dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_more"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="top"
                                    android:text="MORE APPS"
                                    android:textAlignment="gravity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15.0sp" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/testLayout"
                        android:layout_width="match_parent"
                        android:layout_height="125.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:layout_weight="1.0"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cornerRadius="7.0dip">

                        <RelativeLayout
                            android:id="@+id/lay_privacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/privacypolicy_btn">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/img_support"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerHorizontal="true"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_security_black_24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_support"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="top"
                                    android:text="Support"
                                    android:textAlignment="gravity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="15.0sp"
                                    tools:ignore="HardcodedText" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>