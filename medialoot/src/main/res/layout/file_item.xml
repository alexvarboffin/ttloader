            <!--                        android:text="Size : "-->
            <!--                        android:textColor="@color/colorPrimary" />&ndash;&gt;-->


            <!--                    -->

            <!--                </LinearLayout>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>